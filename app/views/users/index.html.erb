<h1>Listing users</h1>

<table>
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Portrait</th>
    <th>About Me</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= image_tag user.image_upload.thumb.url unless user.image_upload.thumb.url.nil? %></td>
    <td><%= user.bio %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_registration_path(user) %></td>
    <td><%= link_to "Cancel my account", registration_path(user), :confirm => "Are you sure?" , :method => :delete %></td>
  </tr>
<% end %>
</table>
