<h1>Listing cheer_ups</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Image</th>
    <th>CheerUp!</th>
    <th>Sound</th>
    <th>Rating</th>
    <th>Votes</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cheer_ups.each do |cheer_up| %>
  <tr>
    <td><%= cheer_up.user.firstname %></td>
    <td><%= cheer_up.user.lastname %></td>
    <td><%= image_tag cheer_up.image_upload.thumb.url unless cheer_up.image_upload.thumb.url.nil? %></td>
     <td><%= cheer_up.content %></td>
    <td><%= cheer_up.sound_upload %></td>
    <td><%= cheer_up.rating %></td>
    <td><%= cheer_up.votes.size %></td>
    <td><%= link_to 'Show', cheer_up %></td>
    <td><%= link_to 'Edit', edit_cheer_up_path(cheer_up) %></td>
    <td><%= link_to 'Destroy', cheer_up, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

