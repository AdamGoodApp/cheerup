<% cheer_ups.each do |cheer_up| %>
<div id="cu" class="container">
  <div class="row">
    <div class="span2 profileimage">
      <%= image_tag cheer_up.user.image_upload.thumb.url %>
    </div>

    <div class="span4 cu2">

      <div class="cuimage">
        <%= image_tag cheer_up.image_upload.thumb.url %>
      </div>

        <% if cheer_up.sound_upload.length > 0 %>
      <div class="cusound">
        <audio controls>
          <source src="<%= cheer_up.sound_upload %>" type="audio/ogg">
            <source src="<%= cheer_up.sound_upload %>" type="audio/mpeg">
              Your browser does not support the audio element.
            </audio>
      </div>
          <% end %>

          <div class="cucontent">
            <%= cheer_up.content %>
          </div>

          <div class="curating">
            <b>Rating:</b>
            <%= cheer_up.rating %>
          </div>

          <%= link_to 'Edit', edit_cheer_up_path(cheer_up), class: "btn" %> |
          <%= link_to 'Back', cheer_ups_path, class: "btn" %>
    </div>

      </div>
    </div>
    <% end %>

